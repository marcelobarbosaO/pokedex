{
  "name": "pokedex",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "npx solidarity && npx react-native run-android",
    "ios": "npx solidarity && npx react-native run-ios",
    "start": "npx solidarity && npx react-native start --reset-cache",
    "test": "jest --no-cache --passWithNoTests",
    "precommit": "yarn pretty && yarn lint",
    "prepush": "npx tsc && lint-staged",
    "pretty": "prettier --config ./.prettierrc.js --write \"src/**/*.{js,jsx,ts,tsx,json}\"",
    "lint": "tsc && eslint '*/**/*.{js,jsx,ts,tsx}' --fix"
  },
  "dependencies": {
    "@hookform/resolvers": "^2.8.2",
    "@react-native-async-storage/async-storage": "^1.15.9",
    "@react-navigation/drawer": "^6.1.8",
    "@react-navigation/native": "^6.0.6",
    "@react-navigation/native-stack": "^6.2.4",
    "@reduxjs/toolkit": "^1.6.2",
    "axios": "^0.23.0",
    "react": "17.0.2",
    "react-hook-form": "^7.17.3",
    "react-native": "0.66.0",
    "react-native-drawer": "^2.5.1",
    "react-native-gesture-handler": "^1.10.3",
    "react-native-linear-gradient": "^2.5.6",
    "react-native-paper": "^4.9.2",
    "react-native-reanimated": "^2.2.3",
    "react-native-safe-area-context": "^3.3.2",
    "react-native-screens": "^3.8.0",
    "react-native-size-matters": "^0.4.0",
    "react-native-vector-icons": "^8.1.0",
    "react-redux": "^7.2.5",
    "redux": "^4.1.1",
    "redux-persist": "^6.0.0",
    "redux-saga": "^1.1.3",
    "styled-components": "^5.3.1",
    "yup": "^0.32.11"
  },
  "lint-staged": {
    "**/*.ts?(x)": [
      "yarn pretty",
      "yarn lint"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/runtime": "^7.12.5",
    "@react-native-community/eslint-config": "^2.0.0",
    "@testing-library/jest-native": "^4.0.2",
    "@testing-library/react-native": "^7.2.0",
    "@types/jest": "^27.0.2",
    "@types/react": "^17.0.27",
    "@types/react-native": "^0.65.5",
    "@types/react-redux": "^7.1.19",
    "@types/react-test-renderer": "^17.0.1",
    "@types/redux": "^3.6.0",
    "@types/redux-persist": "^4.3.1",
    "@types/redux-saga": "^0.10.5",
    "@types/styled-components": "^5.1.15",
    "@types/styled-components-react-native": "^5.1.1",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/eslint-plugin-tslint": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "babel-jest": "^26.6.3",
    "babel-plugin-module-resolver": "^4.1.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-typescript": "^14.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-babel-module": "^5.3.1",
    "eslint-import-resolver-babel-plugin-root-import": "^1.1.1",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-react-native": "^3.11.0",
    "jest": "^26.6.3",
    "jest-styled-components": "^7.0.5",
    "lint-staged": "^11.2.0",
    "metro-react-native-babel-preset": "^0.66.2",
    "react-test-renderer": "17.0.2",
    "reactotron-react-native": "^5.0.0",
    "solidarity": "^3.0.4",
    "solidarity-react-native": "^2.1.2",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3",
    "typescript-plugin-styled-components": "^2.0.0"
  },
  "jest": {
    "preset": "react-native",
    "setupFiles": [
      "<rootDir>/jest.setup.js"
    ],
    "setupFilesAfterEnv": [
      "./jest.setup.js"
    ],
    "moduleDirectories": [
      "node_modules",
      "<rootDir>"
    ],
    "collectCoverage": false,
    "coverageReporters": [
      "json",
      "html"
    ],
    "moduleNameMapper": {
      "\\.(pdf|jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "^styled-components$": "<rootDir>/node_modules/styled-components",
      "@assets(.*)$": "<rootDir>/app/assets$1",
      "@components(.*)$": "<rootDir>/app/components$1",
      "@services(.*)$": "<rootDir>/app/services$1",
      "@scenes(.*)$": "<rootDir>/app/scenes$1",
      "@store(.*)$": "<rootDir>/app/store$1",
      "@theme(.*)$": "<rootDir>/app/theme$1",
      "@utils(.*)$": "<rootDir>/app/utils$1"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/assets/**",
      "!src/store/**"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "rnpm": {
    "assets": [
      "./assets/fonts/"
    ]
  }
}
