{
  "name": "pokedex",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "npx solidarity && npx react-native run-android",
    "ios": "npx solidarity && npx react-native run-ios",
    "start": "npx solidarity && npx react-native start",
    "test": "jest",
    "precommit": "yarn pretty && yarn lint",
    "prepush": "npx tsc && lint-staged",
    "pretty": "prettier --config ./.prettierrc.js --write \"src/**/*.{js,jsx,ts,tsx,json}\"",
    "lint": "tsc && eslint '*/**/*.{js,jsx,ts,tsx}' --fix"
  },
  "dependencies": {
    "react": "17.0.2",
    "react-native": "0.66.0",
    "react-native-paper": "^4.9.2",
    "react-native-vector-icons": "^8.1.0"
  },
  "lint-staged": {
    "**/*.ts?(x)": [
      "yarn pretty",
      "yarn lint"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/runtime": "^7.12.5",
    "@react-native-community/eslint-config": "^2.0.0",
    "@types/jest": "^27.0.2",
    "@types/react": "^17.0.27",
    "@types/react-native": "^0.65.5",
    "@types/react-test-renderer": "^17.0.1",
    "@types/styled-components": "^5.1.15",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/eslint-plugin-tslint": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "babel-jest": "^26.6.3",
    "babel-plugin-module-resolver": "^4.1.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-typescript": "^14.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-babel-module": "^5.3.1",
    "eslint-import-resolver-babel-plugin-root-import": "^1.1.1",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-react-native": "^3.11.0",
    "jest": "^26.6.3",
    "jest-styled-components": "^7.0.5",
    "lint-staged": "^11.2.0",
    "metro-react-native-babel-preset": "^0.66.2",
    "react-test-renderer": "17.0.2",
    "solidarity": "^3.0.4",
    "solidarity-react-native": "^2.1.2",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3",
    "typescript-plugin-styled-components": "^2.0.0"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "rnpm": {
    "assets": [
      "./assets/fonts/"
    ]
  }
}
